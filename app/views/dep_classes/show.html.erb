<p style="color: green"><% notice %></p>

<div class="container" style="margin-top: 20%;margin-left: 20%;width: 100%">
  <div class="row justify-content-center mt-4">
    <div class="col-auto">
      <%= link_to "Teachers",department_teachers_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Courses", department_courses_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Rooms", department_rooms_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Class", department_dep_classes_path(@department), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Slots", department_slots_path(@department), class: "btn btn-primary" %>
    </div>

  </div>

  <h2 class="mt-4"><%=@dep_class.name.capitalize %> Subjects</h2>
  <%= link_to "Add Courses", new_department_dep_class_class_course_slot_path(@department,@dep_class),class: "btn btn-primary" %>

  <table class="table mt-4">
    <thead>
    <tr>
      <th scope="col">Course Name</th>
      <th scope="col">Teacher Name</th>
      <th scope="col"> Slot Time</th>
      <th scope="col">Day</th>
    </tr>
    </thead>
    <tbody>
    <%@dep_class.class_course_slots.each do |class_course_slot| %>
      <tr>
        <td><%= class_course_slot.teacher_course.course.courseName.capitalize %></td>
        <td><%= class_course_slot.teacher_course.teacher.name.capitalize %></td>
        <td>
          <%= class_course_slot.slot.start_time.strftime('%H:%M') %> To <%=class_course_slot.slot.end_time.strftime('%H:%M') %>
        </td>
        <td>  <%=class_course_slot.days %></td>

        </td>
      </tr>
      <%end %>
    </tbody>
  </table>
</div>
<p style="color: green"><% notice %></p>

<div class="container" style="margin-top: 20%;margin-left: 20%;width: 100%">
  <table class="table mt-4">
    <thead>
    <tr>
      <th scope="col">Course Name</th>
      <th scope="col">Teacher Name</th>
      <th scope="col"> Slot Time</th>
      <th scope="col">Day</th>
    </tr>
    </thead>
    <tbody>
    <%= calendar(number_of_days: 7) do |date| %>
     <%if date.strftime("%A") == "Sunday"%>
     <%else %>

      <%date %>
        <%@dep_class.class_course_slots.each do |class_course_slot| %>
          <tr>
            <td><%= class_course_slot.teacher_course.course.courseName.capitalize %></td>
            <td><%= class_course_slot.teacher_course.teacher.name.capitalize %></td>
            <td>
              <%= class_course_slot.slot.start_time.strftime('%H:%M') %> To <%=class_course_slot.slot.end_time.strftime('%H:%M') %>
            </td>
            <td>  <%=class_course_slot.days %></td>

            </td>
          </tr>
        <%end %>
    <%end %>
      <% end %>
    </tbody>
  </table>
</div>