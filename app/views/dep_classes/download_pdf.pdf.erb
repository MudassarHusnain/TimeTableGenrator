 <div class="header">
    <%= @dep_class.name.capitalize %> Time Table
  </div>

  <div class="container">
    <table>
      <thead>
        <tr>
          <th>Course Name</th>
          <th>Teacher Name</th>
          <th>Slot Time</th>
          <th>Day</th>
        </tr>
      </thead>
      <tbody>
        <% @dep_class.class_course_slots.each do |class_course_slot| %>
          <tr>
            <td><%= class_course_slot.teacher_course.course.courseName.capitalize %></td>
            <td><%= class_course_slot.teacher_course.teacher.name.capitalize %></td>
            <td class="slot-time">
              <%= class_course_slot.slot.start_time.strftime('%H:%M') %> - <%= class_course_slot.slot.end_time.strftime('%H:%M') %>
            </td>
            <td class="day">
              <% if class_course_slot.days == 'day1' %>
                Monday And Wednesday
              <% else %>
                Tuesday And Thursday
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
    }

    .container {
      margin: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 12px;
    }

    th {
      background-color: #f2f2f2;
      color: #333;
    }

    td {
      background-color: #ffffff;
      color: #555;
    }

    .header {
      background-color: #007bff;
      color: #ffffff;
      padding: 20px;
      text-align: center;
      font-size: 24px;
    }

    .slot-time {
      font-weight: bold;
    }

    .day {
      font-style: italic;
    }
  </style>