<p style="color: green"><%= notice %></p>

<h1>Dep classes</h1>

<div id="dep_classes">
  <% @dep_classes.each do |dep_class| %>
    <%= render dep_class %>
    <p>
      <%= link_to "Show this dep class", department_dep_class_path(dep_class.department_id,dep_class) %>
    </p>
  <% end %>
</div>

<%= link_to "New dep class", new_department_dep_class_path(params[:department_id]) %>
<div class="container" style="margin-top: 20%;margin-left: 20%;width: 100%">
  <div class="row justify-content-center mt-4">
    <div class="col-auto">
      <%= link_to "Teachers",department_teachers_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Courses", department_courses_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Rooms", department_rooms_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
  </div>

  <h2 class="mt-4">Classes Information</h2>
  <%= link_to "Add Course",new_department_dep_class_path(params[:department_id]),class: "btn btn-primary" %>

  <table class="table mt-4">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Class Name</th>
      <th scope="col">Department</th>
      <th scope="col">Strength</th>
    </tr>
    </thead>
    <tbody>
    <% @department.dep_classes.all.each.with_index(1) do |depclass, index| %>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= depclass.courseName %></td>
        <td><%= depclass.department.name %></td>
        <td>
          <%= depclass.strength %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
