<%
=begin%>
 <p style="color: green"><%= notice %></p>

<h1>Slots</h1>


<div id="slots">
  <% @department.slots.each do |slot| %>
    <%= render slot %>
  <% end %>
</div>

<%= link_to "New Slot", new_department_slot_path(params[:department_id]) %>
 
<%
=end%>


<div class="container" style="margin-top: 20%;margin-left: 20%;width: 100%">
<div class="row justify-content-center mt-4">
    <div class="col-auto">
      <%= link_to "Teachers",department_teachers_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Courses", department_courses_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Rooms", department_rooms_path(params[:department_id]), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Class", department_dep_classes_path(@department), class: "btn btn-primary" %>
    </div>
    <div class="col-auto">
      <%= link_to "Slots", department_slots_path(@department), class: "btn btn-primary" %>
    </div>
    
  </div>

  <h2 class="mt-4">Slots Information</h2>
  <%= link_to "Add Slotd ",new_department_course_path(params[:department_id]),class: "btn btn-primary" %>

  <table class="table mt-4">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Start Time</th>
      <th scope="col">End Time</th>
      <th scope="col">Department</th>
    </tr>
    </thead>
    <tbody>
    <% @department.slots.all.each.with_index(1) do |slot, index| %>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= slot.start_time %></td>
        <td><%= slot.end_time %></td>
        <td><%= slot.department.name%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
