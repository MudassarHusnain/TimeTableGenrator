<%#= form_with(model: [department,teacher],url: department_teachers_path(department)) do |form| %>
<%= form_with(model: [department, teacher], url: (teacher.persisted? ? department_teacher_path(department, teacher) : department_teachers_path(department)), method: (teacher.persisted? ? :patch : :post)) do |form| %>

  <% if teacher.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
        <% teacher.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="ms-5 ps-5">
    <div class="container">
      <div class="signup-content">
        <div class="signup-form">
          <h2 class="form-title">Create New Teacher</h2>
          <form method="POST" class="register-form" id="register-form">
            <div class="form-group">
              <label for="name"><i class="zmdi zmdi-account material-icons-name fs-5"></i></label>
              <div class="form-group">
                <%#= form.label :courseName, style: "display: block" %>
                <%= form.text_field :name, placeholder: "Teacher Name", class: "fs-5" %>
              </div>

              <div class="form-group form-button">
                <%= form.submit class: "form-submit fs-5" %>
              </div>
            </div>
          </form>
          <div>
            <%= link_to "Back to Teachers", department_teachers_path %>
          </div>
        </div>
      </div>
    </div>

  </section>
<% end %>
