<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-lg-3 col-md-4 col-sm-12 p-0 sidebar">
      <%= image_tag 'logo.png', alt: 'Logo', class: 'mt-3 rounded', style: 'width: 100%; height: 10%' %>
      <ul class="nav flex-column">
        <li class="nav-item mt-4">
        <div class="ui selection dropdown bg-dark">
          <i class="dropdown icon"></i>
          <div class="default nav-link text fs-5 bg-dark ms-5">Departments</div>
          <div class="menu scrolling bg-dark">
            <% Department.all.each do |department| %>
                <div class="item" data-value="<%= department.id %>"><%= link_to department.name.capitalize, department_path(department) %></div>
            <% end %>
          </div>
        </div>
      </li>

        <li class="nav-item">
          <a class="nav-link" href="/teachers">Teachers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Settings</a>
        </li>
      </ul>
      <a href="#" class="logout-link">Logout</a>
    </div>
    <!-- End Sidebar -->
    
    <!-- Main Content -->
    <div class="col-lg-9 col-md-8 col-sm-12 main-content">
      <%= yield %>
    </div>
    <!-- End Main Content -->
    
  </div>
</div>
